<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/iluminalogo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Cadastre-se"
        android:textColor="@color/cinza"
        android:textSize="32sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite seu email e senha para criar uma conta"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <!-- Campo Email -->
    <TextView
        android:layout_width="370dp"
        android:layout_height="20dp"
        android:text="Email"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_rectangle_yellow"
        android:hint="Digite seu email"/>

    <!-- Campo CPF -->
    <TextView
        android:layout_width="370dp"
        android:layout_height="20dp"
        android:text="CPF"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextCpf"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_rectangle_yellow"
        android:hint="Digite seu CPF"/>

    <!-- Campo Telefone -->
    <TextView
        android:layout_width="370dp"
        android:layout_height="20dp"
        android:text="Telefone"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextTelefone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_rectangle_yellow"
        android:hint="Digite seu Telefone"/>

    <!-- Campo Rua -->
    <TextView
        android:layout_width="370dp"
        android:layout_height="20dp"
        android:text="Rua"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextRua"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_rectangle_yellow"
        android:hint="Digite sua Rua"/>

    <!-- Campo Bairro -->
    <TextView
        android:layout_width="370dp"
        android:layout_height="20dp"
        android:text="Bairro"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextBairro"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_rectangle_yellow"
        android:hint="Digite seu Bairro"/>

    <!-- Campo Senha -->
    <TextView
        android:layout_width="370dp"
        android:layout_height="20dp"
        android:text="Senha"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_rectangle_yellow"
        android:hint="Digite sua senha"
        android:inputType="textPassword"/>

    <!-- Confirmar Senha -->
    <TextView
        android:layout_width="370dp"
        android:layout_height="20dp"
        android:text="Confirme a Senha"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_rectangle_yellow"
        android:hint="Confirme sua senha"
        android:inputType="textPassword"/>

    <!-- Botão Cadastrar -->
    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_yellow"
        android:textColor="@color/white"
        android:text="Cadastrar"
        android:layout_marginTop="16dp"/>

    <!-- Botão Login -->
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/rounded_rectangle_yellow"
        android:text="Já tem uma conta? Faça Login"
        android:layout_marginTop="8dp"/>

</LinearLayout>
